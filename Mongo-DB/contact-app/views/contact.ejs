<div class="container">
  <table class="table border mt-2">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama</th>
        <th scope="col">Nomor</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% if (user.length === 0) { %>
      <tr>
        <th scope="row"></th>
        <td>Belum ada contact</td>
      </tr>
      <% } else { %> <% user.forEach((user,index) => { %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= user.username %></td>
        <td><%= user.phoneNumber %></td>
        <td><a href="/detail/<%= user.username %>">Bakso kon</a></td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>
  <div class="d-flex justify-content-end">
    <a class="btn btn-primary" href="/add-contact">Add Contact</a>
  </div>
</div>
